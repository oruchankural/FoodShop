@model List<FoodShop.Data.Models.Category> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Category List</h3>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Category Name</th>
        <th>Status</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.CategoryID</td>
            <td>@x.CategoryName</td>
            <td>@x.Status</td>
            <td><a href="/Category/CategoryDelete/@x.CategoryID" class="btn-sm btn-danger">Delete</a></td>
            <td><a href="/Category/CategoryGet/@x.CategoryID" class="btn-sm btn-success">Update</a></td>
        </tr>
     }
</table>

<a href="/Category/CategoryAdd" class="btn-sm btn-primary">New Category</a>
